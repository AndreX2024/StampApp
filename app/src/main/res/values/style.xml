<?xml version="1.0" encoding="utf-8"?>
<resources>
    --ButtonRounded
    <style name="ButtonRounded" parent="@android:style/Widget.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:textSize">48sp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    --ButtonRoundedGoogle
    <style name="ButtonRoundedGoogle" parent="@android:style/Widget.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button_rounded_google</item>
    </style>

    --EditText
    <style name="EditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text_rounded</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    --CheckBox
    <style name="CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_custom</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    --ImageView
    <style name="ImageProfile">
        <item name="android:background">@drawable/profile_image</item>
        <item name="android:padding">15dp</item>
    </style>

    --TableLayout
    <style name="TableStyle">
        <item name="android:background">@drawable/table_layout_design</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    --TableRow
    <style name="TableRowStyle">
        <item name="android:background">@drawable/table_row_design</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

</resources>